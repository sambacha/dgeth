{
  "compilerOptions": {
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ESNEXT"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNEXT",
    "rootDir": ".",
    "outDir": "./dist",
    "types": ["@types/node", "@types/ffi-napi", "@types/chai", "@types/mocha"],
    "plugins": [
      {
        "name": "typescript-eslint-language-service"
      }
    ]
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["**/node_modules", "**/.*/", "src/**/*.test.ts", "tmp/*.ts"]
}
